        const totalImages = images.length;  // Görsel sayısını al
        const imageWrapper = document.querySelector('.image-wrapper'); // Görsel konteynerini seç

        // Sol buton fonksiyonu
        document.querySelector('.prev-button').addEventListener('click', function () {
            // Sol butona basıldığında bir görsel geri kaydır
            currentIndex = (currentIndex === 0) ? totalImages - 1 : currentIndex - 1;
            updateSlider();
        });

        // Sağ buton fonksiyonu
        document.querySelector('.next-button').addEventListener('click', function () {
            // Sağ butona basıldığında bir görsel ileri kaydır
            currentIndex = (currentIndex === totalImages - 1) ? 0 : currentIndex + 1;
            updateSlider();
        });

        // Kaydırma fonksiyonu
        function updateSlider() {
            // Görsellerin kaymasını sağlamak için translateX ile kaydırma işlemi
            const newTransformValue = -currentIndex * 100;  // Görsellerin tam olarak bir görsel kadar kayması için %100
            imageWrapper.style.transition = 'transform 0.5s ease';  // Kayma efekti ekle
            imageWrapper.style.transform = `translateX(${newTransformValue}%)`;
        }


